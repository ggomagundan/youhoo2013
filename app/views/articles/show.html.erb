<div class="hero-unit container" style="margin-top:40px;">
<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
<% provide(:title,'Report Volunteer') %>
  <%= @article.user_id %>
</p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Content:</b>
  <%= @article.content %>
</p>

<p>
  <b>Popularity:</b>
  <%= @article.popularity %>
</p>

<p>
  <% pic_exist = Picture.find_by_article_id(@article.id) %>
  <% if pic_exist != nil %>
    <%= image_tag @ppp.image_url(), :alt=>"pic", :size => "600x400" %>
  <% end %>
</p>
  

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
</div>
