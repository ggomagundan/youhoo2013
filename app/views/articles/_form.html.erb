<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%- f.label :title -%>
    <%= f.text_field :title, :style => "width:500px;", :placeholder =>"title" %>
  </div>
  <div class="field">
    <%- f.label :content -%>
    <%= f.text_area :content, :size => "20x10", :placeholder =>"show your report" , :maxlength => 140, :style => "width:800px;height:200px;" %>
  </div>
  <div class="field">
    <%- f.label :photo_id -%>
    <%= f.file_field :photo_id %>
  </div>
  <div class="actions ">
    <%= f.submit :class=>"btn btn-large btn-primary" %>
  </div>

<% end %>
