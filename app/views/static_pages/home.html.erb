 <% btnText = ["Sign in Facebook", "Learn more", "View Epilogue"] %>
 <% word_size = ["523x23", "435x23", "325x51"] %>

    <div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <% (0..2).each do |n| %>
            <% if n == 0 %>
                <div class="item active">
            <% else %>
                <div class="item">
            <% end %>
            <%= image_tag("main_back#{n}.png", alt: "img#{n+1}") %>
            <div class="container">
              <div class="carousel-caption">
                <h1><%= titles[n] %></h1>
                <p class="lead"><%= leads[n] %>
                <% if n==1 %>
                  <br />가슴 떨리는 이야기를 들려주세요.
                <% end %>
                
                </p>
                <% if !current_user && n == 0 %>
                  <%= link_to "Sign in Facebook", "/auth/facebook", class: "btn btn-large btn-primary"  %>
                <% elsif n == 1 %>
                  <%= link_to btnText[n], new_article_path, class: "btn btn-large btn-primary"  %>
                <% elsif n == 2 %>
                  <%= link_to btnText[n], articles_path, class: "btn btn-large btn-primary"  %>
                <% end %>
              </div>
              <% if n==2 %>
                <div class="main_picture">
                  <div class="album"><%= image_tag("fir.png", alt:"test", class:"pic") %></div>
                  <div class="album"><%= image_tag("sec.png", alt:"test", class:"pic") %></div>
                  <div class="album"><%= image_tag("thir.png", alt:"test", class:"pic") %></div>
                  <div class="album"><%= image_tag("four.png", alt:"test", class:"pic") %></div>
                </div>
              <% end %>


          </div>
        </div>

    <% end %>
        </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div><!-- /.carousel -->




